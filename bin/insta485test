#!/bin/bash
# insta485test

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/

# Exit on any error and print each command before running it
set -e -x

# Run pycodestyle
pycodestyle insta485

# Run pydocstyle
pydocstyle insta485

# Run pylint
pylint insta485

# Run unit tests using pytest
pytest -v tests